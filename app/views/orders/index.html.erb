<h1>Received Orders</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Order Date</th>
    <th>Customer Name</th>
    <th>Restaurant Name</th>
    <th>Delivery Address</th>
    <th>Delievery Date</th>
    <th>Delivery Time</th>   
    <th>Payment Type</th>
    <th>Action</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= order.first_name %> <%= order.last_name %></td>
      <td><%= order.restaurant_name %></td>
      <td><%= order.address %></td>
      <td><%= order.delivery_date %></td>
      <td><%= order.delivery_time %></td>
      <td><%= order.pay_type %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", order, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_order_path(order), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
                
      </td>
    </tr>
  <% end %>
</table>