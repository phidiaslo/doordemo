<h1>Received Orders</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Order No.</th>
    <th>Date</th>
    <th>Customer</th>
    <th>Address</th>
    <th>Delivery</th>
    <th>Payment Type</th>
    <th>Restaurant Name</th>
    <th>Total (RM)</th>
    <th></th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td>BC10<%= order.id %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= order.user.first_name %> <%= order.user.last_name %> <%= order.user.phone_number %></td>
      <td><%= order.address %></td>
      <td><%= order.delivery_time %> <%= order.delivery_date %></td>
      <td><%= order.pay_type %></td>
      <td><%= order.merchant.restaurant_name %></td>
      <td></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", order, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_order_path(order), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
                
      </td>
    </tr>
  <% end %>
</table>