<h1>Received Orders</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Order No.</th>
    <th>Date</th>
    <th>Customer Name</th>
    <th>Address</th>
    <th>Delivery Date</th>
    <th>Delivery Time</th>
    <th>Total</th>
    <th></th> 
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td>BC10<%= order.id %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= order.user.first_name %> <%= order.user.last_name %></td>
      <td><%= order.address %></td>      
      <td><%= order.delivery_date %></td>
      <td><%= order.delivery_time %></td>
      <td><%= number_to_currency(order.total_price, :locale => :my) %></td>
      <td><%= link_to "View Order", order, class: "btn btn-default" %></td>
    </tr>
  <% end %>
</table>