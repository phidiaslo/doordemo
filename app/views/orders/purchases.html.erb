<h1>Purchase History</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Order No.</th>
    <th>Date</th>
    <th>Delivery Address</th>
    <th>Delivery Date</th>
    <th>Delivery Time</th>
    <th>Restaurant Name</th>
    <th>Total</th>
    <th></th>
           
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td>BC10<%= order.id %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= order.address %></td>
      <td><%= order.delivery_date %></td>
      <td><%= order.delivery_time %></td>
      <td><%= order.merchant.restaurant_name %></td>
      <td><%= number_to_currency(order.total_order, :locale => :my) %></td>
      <td><%= link_to "View Purchase", order, class: "btn btn-default" %></td>
      
    </tr>
  <% end %>
</table>