 <div class="center">
  <div>
    <h1>Pick Your Restaurant</h1>
    <h4>The Best From Damai. No Minimum Order Size.</h4>
  </div>
  <div class="delivery-time">
    <p>Delivery Hours: 11:00AM - 5:00PM</p>
  </div>
  <div class="row">
    <% @merchants.each do |merchant| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(merchant.logo.url), merchant %>
            <div class="caption">
              <h3><%= merchant.restaurant_name %></h3>
              <p><%= merchant.area %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
