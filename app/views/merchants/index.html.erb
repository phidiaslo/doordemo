<div class="center">
  <div class="row">
    <% @merchants.each do |merchant| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(merchant.logo.url), merchant %>
            <div class="caption">
              <h3><%= merchant.restaurant_name %></h3>
              <p><%= merchant.area %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

