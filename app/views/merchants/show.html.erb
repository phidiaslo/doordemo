<h2><%= @merchant.restaurant_name %></h2>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag(listing.image.url) %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= listing.description %></p>
              <p><%= number_to_currency(listing.price, :locale => :my) %></p>

              <% if (merchant_signed_in?) && (current_merchant == listing.merchant) %>
                <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
                <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              <% else %>
              <br>
                <%= link_to 'Add to Order', listing, class: "btn btn-default" %>
              <% end %>
            
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>