<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Area</th>
    <th>Address</th>
    <th>Action</th>
  </tr>

  <% @locations.each do |location| %>
    <tr>
      <td><%= location.location_name %></td>
      <td><%= location.location_area %></td>
       <td><%= location.location_address %></td>
      <td>

        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'View', location, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_location_path(location), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
                
      </td>
    </tr>
  <% end %>
</table>

