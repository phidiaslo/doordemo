<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Market</th>
      <th>Action</th>
  </tr>

  <% @applicants.each do |applicant| %>
    <tr>
      <td><%= applicant.name %></td>
      <td><%= applicant.phone_number %></td>
      <td><%= applicant.email %></td>
      <td><%= applicant.market %></td>
      <td>

        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", applicant, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_applicant_path(applicant), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
                
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Applicant', new_applicant_path %>
